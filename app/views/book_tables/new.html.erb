<%= form_for @book_table, url: book_tables_path(restaurant: @restaurant.id) do |form| %>
  <div class="col-8 mx-auto">    
    <div class="card">
      <div class="card-header text-center">
        <h3>Book Table</h3>
      </div>
      
      <div class="card-body text-right">
        <%= render "layouts/errors", obj: @book_table %>
         <%= form.hidden_field :restaurant_id, value: @restaurant.id %>
         <div class="row mb-2">
          <div class="col-sm-4">
            <span>Per head</span>
          </div>
          <div class="col-sm-6 text-left">
            <span>Rs.<%= @restaurant.table_price %></span>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :heads, for: "heads", class:"col-sm-4 col-form-label"%>
          <div class="col-sm-6 ">
            <%= form.number_field :heads,for: "heads", class: "form-control", id: "myInput", oninput: "myFunction()", placeholder: "number of heads", required: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :date, for: "date", class:"col-sm-4 col-form-label" %>
          <div class="col-sm-6 text-left">
            <%= form.date_field :date, class: "form-control", required: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :time, for: "time", class:"col-sm-4 col-form-label" %>
          <div class="col-sm-4 text-left">
            <%= form.time_select :time, class: "form-control", required: true %>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-sm-4">
            <span>Total</span>
          </div>
          <div class="col-sm-6 text-left">
            <span id="demo"></span>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group row justify-content-center my-4">
      <div class="col-2">
        <strong><%= link_to "Back", :back, class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" %></strong>
      </div>
      <div class="col-2">
        <strong><%= form.submit "Book", class: "btn btn-primary btn-md btn-block my-2 my-sm-0"%></strong>
      </div>
    </div>
  </div>
<% end %>

<script>
function myFunction() {
  var x = document.getElementById("myInput").value;
  document.getElementById("demo").innerHTML ="Rs." + <%= @restaurant.table_price%> * x;
}
</script>

