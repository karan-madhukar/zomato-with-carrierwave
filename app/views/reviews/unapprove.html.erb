<div class="col-8 mx-auto">
  <div class="card">
  <% unless !@review.first %>
    <div class="card-header text-center">
      <h4>Approval Request</h4>
    </div>
    <% @review.each do |review|%>
      <div class="card-body border-bottom border-dark text-dark">
        <span class="card-title d-block">For restaurant : <%= review.restaurant.restaurant_name %></span>
        <span class="card-title d-block">user name : <%= review.user.Username %></span>
        <span class="card-title d-block">Rating : <%= review.rating %></span>
        <span class="card-title">Review : <%= review.feedback %></span>  
        <%= form_for review, url: approve_request_review_path(review.id) do |f|%>
          <div class="row justify-content-center my-4">
            <div class="col-4">
              <strong><%= f.submit "Approve", class: "btn btn-primary btn-md btn-block my-2 my-sm-0" %></strong>
            </div>
            <div class="col-4">
              <strong><%= link_to "Delete", reject_review_path(review.id), class: "btn btn-danger btn-md btn-block my-2 my-sm-0", data: {method: :delete, confirm: "Are you sure!"} %></strong>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
   <h2 class="text-center text-danger"> No  Any Approval Request </h2>
  <% end %>
  </div>
</div>