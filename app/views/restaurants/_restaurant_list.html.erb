<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Restaurant Name</th>
      <th scope="col">email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant.each_with_index do |restaurant,i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= restaurant.restaurant_name %></td>
      <td><%= restaurant.email %></td>
      <% unless["list"].include?(params[:action]) %>
        <td>
        <div class="row">
          <div class="col-sm-6">
            <%= link_to "Edit", edit_restaurant_path(restaurant.id), class: "btn btn-sm btn-block btn-secondary"%>
          </div>
          <div class="col-sm-6">
            <%= link_to "Delete", restaurant_path(restaurant.id), data:{ method: :delete, confirm: "Are you sure" }, class: "btn btn-sm btn-block btn-danger"%>
          </div>
        </div>
        </td>
      <% else %>
        <td>
          <%= link_to "Upload Images", upload_image_restaurant_path(restaurant.id), class: "btn btn-sm btn-block btn-primary"%>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody> 
</table>
<div class="row justify-content-right">
  <div class="col-2">
    <%= link_to "Back", admin_dashboards_path, class: "btn btn-lg btn-block btn-secondary"%>  
  </div>
</div>

