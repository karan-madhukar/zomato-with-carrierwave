<div class="col-6 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h4>Profile</h4>
    </div>
    <div class="card-body">
      <span class="card-title d-block">USERNAME : <%= current_user.Username %></span>
      <span class="card-title">EMAIL : <%= current_user.email %></span>
      <div class="row justify-content-center my-4">
        <div class="col-2">
          <strong><%= link_to "Back", users_path, class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" %></strong>
        </div>
         <% if current_user.provider.nil? %>
          <div class="col-2">
            <strong><%= link_to "Edit", edit_user_path, class: "btn btn-primary btn-md btn-block my-2 my-sm-0" %></strong>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>